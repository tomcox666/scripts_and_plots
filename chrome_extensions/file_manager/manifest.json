{
    "manifest_version": 2,
    "name": "Temp File Mover",
    "version": "1.0",
    "description": "A Chrome extension that saves temporary files in a temp folder and then moves them to a Files folder",
    "permissions": ["downloads", "filesystem", "activeTab"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_icon": "icons/icon16.png",
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }