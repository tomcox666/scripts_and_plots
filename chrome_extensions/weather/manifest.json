{
    "manifest_version": 2,
    "name": "Weather Extension",
    "version": "1.0",
    "description": "A Chrome extension that displays the current weather.",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "browser_action": {
      "default_icon": "icon48.png",
      "default_popup": "popup.html"
    },
    "permissions": ["geolocation"]
  }